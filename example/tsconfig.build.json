{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "modules",
        "esModuleInterop": true,
        "strict": true,
        "paths": {
            "@example/*": ["*/src"],
            "@example/*/typings": ["*/typings"]
        },
        "plugins": [{ "transform": "@replikit/hooks/plugin" }]
    },
    "include": ["replikit.config.ts", "modules/**/*.ts"]
}
