{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Show all errors",
            "command": "tsc",
            "type": "shell",
            "args": ["-w", "-p", "."],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}
