{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "sourceMap": true,
        "baseUrl": "packages",
        "paths": {
            "@replikit/*/typings": ["*/typings"],
            "@replikit/*": ["*/src"],
            "@replikit/hooks/plugin": ["hooks/src/plugin"],
            "chalk": ["../node_modules/chalk"]
        }
    },
    "include": ["packages/**/*.ts", "example/**/*.ts"]
}
